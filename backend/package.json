{
  "name": "resomo-backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.16",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "prettier": "^3.3.3",
    "ts-morph": "^22.0.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@ai-sdk/mistral": "^3.0.12",
    "@ai-sdk/valibot": "^2.0.10",
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@hono/standard-validator": "^0.1.5",
    "@hono/swagger-ui": "0.5.2",
    "@hono/valibot-validator": "0.5.3",
    "@mistralai/mistralai": "^1.11.0",
    "@valibot/to-json-schema": "1.3.0",
    "ai": "^6.0.49",
    "cron": "4.3.3",
    "csv": "6.4.1",
    "drizzle-orm": "0.44.6",
    "drizzle-valibot": "0.4.2",
    "hono": "4.10.1",
    "hono-openapi": "1.1.0",
    "jsonwebtoken": "9.0.2",
    "nanoid": "5.1.6",
    "nodemailer": "7.0.9",
    "pg": "8.16.3",
    "pgvector": "0.2.1",
    "postgres": "3.4.7",
    "valibot": "^1.2.0"
  },
  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:remove": "docker compose down -v",
    "dev": "bun --hot run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --minify",
    "clean": "rm -rf ./lib/",
    "app:migrate": "drizzle-kit migrate",
    "app:generate": "drizzle-kit generate",
    "app:studio": "drizzle-kit studio",
    "framework:migrate": "drizzle-kit migrate --config framework/drizzle.config.ts",
    "framework:generate": "drizzle-kit generate --config framework/drizzle.config.ts",
    "generate": "drizzle-kit generate --config framework/drizzle.config.ts && drizzle-kit generate",
    "migrate": "drizzle-kit migrate --config framework/drizzle.config.ts && drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "release:patch": "tsc && npm version patch && git push --follow-tags && npm publish",
    "release:minor": "tsc && npm version minor && git push --follow-tags && npm publish",
    "release:major": "tsc && npm version major && git push --follow-tags && npm publish"
  }
}
